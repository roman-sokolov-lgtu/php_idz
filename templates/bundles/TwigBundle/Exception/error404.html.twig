{% extends 'base.html.twig' %}

{% block title %}Страница не найдена{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="error-template">
                <h1 class="display-1">404</h1>
                <h2 class="display-4 mb-4">Страница не найдена</h2>
                <div class="error-details mb-4">
                    К сожалению, запрашиваемая страница не существует или была перемещена.
                </div>
                <div class="error-actions">
                    <a href="{{ path('app_order_index') }}" class="btn btn-primary btn-lg me-2">
                        <i class="fas fa-home me-2"></i>На главную
                    </a>
                    {% if is_granted('ROLE_USER') and not is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_order_history') }}" class="btn btn-secondary btn-lg">
                            <i class="fas fa-history me-2"></i>История заказов
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.error-template {
    padding: 40px 15px;
}
.error-template h1 {
    color: #dc3545;
    margin-bottom: 20px;
}
.error-details {
    color: #636b6f;
    font-size: 1.2rem;
}
.error-actions {
    margin-top: 30px;
}
</style>
{% endblock %} 